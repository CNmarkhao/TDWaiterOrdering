<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_loading_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width= "300pt"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft= "40.00pt"
        android:paddingTop= "25pt"
        android:paddingRight= "40.00pt"
        android:paddingBottom= "25pt" >

        <ProgressBar
            android:id="@+id/progressBar1"
            android:layout_width= "80pt"
            android:layout_height= "80pt"
            android:layout_gravity="center_horizontal"
            android:indeterminateBehavior="repeat"
            android:indeterminateDrawable="@drawable/dialog_loading"
            android:indeterminateOnly="true" />
        <TextView
            android:singleLine="true"
            android:id="@+id/tipTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop= "30pt"
            android:text="加载中..."
            android:textColor="#f0f0f0"
            android:textSize= "34pt" />
        <TextView
            android:singleLine="true"
            android:id="@+id/text_count_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop= "30pt"
            android:text="120秒后退出"
            android:textColor="#f0f0f0"
            android:textSize= "34pt" />
    </LinearLayout>
</LinearLayout>
